<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport">
    <% const title = page.title === undefined ? config.title : page.title + ' - ' + config.title %>
    <title><%= title %></title>
    <meta charset="utf-8">
    <% 
        let description = '';
        if (!is_page() && !is_post()) {
            description = config.description;
        } else {
            const l = page.excerpt.split('\n').slice(0, 5);
            description = l.join('\n');
        }
    %>
    <meta name="title" content="<%= title %>">
    <meta name="description" content="<%= description %>">
    <meta property="og:image" content="/favicon.png">
    <%- favicon_tag('favicon.png') %>
    <link rel="stylesheet" href="/prism/prism.css">
    <script src="/prism/prism.js" async></script>
    <script type="text/javascript">$(document).ready(function(){
        $("pre[class*='language-'],code[class*='language-']").addClass('line-numbers');
    });</script>
    <%- css('css/style.css') %>
</head>